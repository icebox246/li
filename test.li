// function computing a ^ b
fn pow a b => 
	if b == 0 __return := 1
	else {
		__return := a * (pow a (b - 1))
	}

$ print "3 ^ 5 = "
$ println pow 3 5

$ println "========="

// function printing numbers from range a .. b
fn print_range a b => 
	if a <= b {
		$ print a	
		if a != b 
			$ print ", "
		$ print_range (a+1) b
	}

$ print_range 1 3
$ println ""

$ println "========="

