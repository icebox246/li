// function wich calculates length of string
fn strlen str => {
	fn __strlen str i => {
		if (char_at str i) == 0 
			__return := i
		else
			__return := __strlen str (i+1)
	}
	__return := __strlen str 0
}

$ print "length of '" + str + "' is " $println strlen str

$ println "========="

